{% extends 'base.html.twig' %}

{% block title %}Réservation{% endblock %}

{% block body %}

    {# Que si connecter #}
    {% if connecter == true %}
        <div class="form">
            {{ form_start(form) }}

            <h1 class="text-center">Réservation</h1>
            <h1 class="text-center">Réserver des places pour </h1>

            <div class="d-flex flex-direction-row justify-content-center">
                <div class="form-label" style="margin-right: 20px; margin-bottom: 20px;padding-top: 5px; align-items: center">
                    {{ form_label(form.nbPlace) }}
                </div>
                <div class="" style="width: 70px">
                    {{ form_widget(form.nbPlace) }}
                </div>
            </div>

            <div class="text-danger" style="">
                {{ form_errors(form) }}
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Réserver</button>
            </div>


            {{ form_end(form) }}
        </div>
    {% endif %}


{% endblock %}